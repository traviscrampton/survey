<h1>Bienvenid@s</h1>

<h2>Choose a Topic</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
  </thead>
  <tbody>
    <% @topics.each() do |topic| %>
    <tr>
      <td>
        <a href="/topics/<%= topic.id() %>"><%= topic.name() %></a>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>
